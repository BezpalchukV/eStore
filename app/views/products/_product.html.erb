<div class="col-xs-5">
    <div class="thumbnail">
      <%= link_to image_tag(product.photo.url, size: '256x256', alt: 'Edit Entry'), product %>
      <h3><%= link_to product.name, product %></h3>
      <%= truncate(product.description, length: 90) %>
      <div class="price_line">
        <span class="price"><%= number_to_currency(product.price) %></span></br></br>
        <%= button_to 'Add to Cart', order_items_path(product_id: product), remote: true %>
      </div>
    </div>
</div>